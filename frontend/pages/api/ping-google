import type { NextApiRequest, NextApiResponse } from "next";

export default async function handler(req: NextApiRequest, res: NextApiResponse) {
  try {
    const r = await fetch("https://www.baidu.com", {
      method: "GET",
    });
    const text = await r.text();

    res.status(200).json({
      ok: true,
      status: r.status,
      length: text.length,
      snippet: text.slice(0, 200), // 只返回前 200 字，避免太长
    });
  } catch (err: any) {
    res.status(500).json({
      ok: false,
      error: err.message || String(err),
    });
  }
}
